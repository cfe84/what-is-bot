{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "TextBlock",
            "text": "Create a new definition",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "id": "fullName",
            "placeholder": "Full name"
        },
        {
            "type": "Input.Text",
            "id": "initialism",
            "placeholder": "Initialism"
        },
        {
            "type": "Input.Text",
            "id": "definition",
            "placeholder": "Definition"
        },
        {
            "type": "Input.Text",
            "id": "url",
            "placeholder": "URL"
        },
        {
            "type": "ActionSet",
            "separator": true,
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Create",
                    "data": {
                        "text": "create definition"
                    }
                }
            ]
        }
    ]
}